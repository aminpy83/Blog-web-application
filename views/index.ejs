<%- include('header.ejs') %>

<div class="bodyBack min-h-[100vh] relative">
  <div class="flex flex-col gap-2  items-center">
    <h1 class="welcome w-1/3"> Your social media workspace </h1>
    <p class="welcome w-1/3">Share anything in your mind</p>
  </div>

<div class="flex justify-center flex-col-3 ">
  <div class="form-container" >
    <form class="form" action="/submit" method="post">

      <div class="form-group"> 
        <label for="Who's writing"></label>
        <input type="text" placeholder="Name" name="user" >

        <label for="Title"></label>
        <input type="text" placeholder="Title" name="title">
      </div>

      <div class="form-group"> 
        <label >  Content</label>
        <textarea class="h-25" type="text" name="content"> </textarea>
      </div>

      <div>
       <input class="form-submit-btn" type="submit" value="PUBLISH">
      </div>
    </form>

  </div>
</div>







